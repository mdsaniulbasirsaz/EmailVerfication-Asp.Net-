@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Admin Dashboard</h2>

    <!-- Success/Error message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Table -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Date of Joining</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.Position</td>
                    <td>@user.Salary</td>
                    <td>@user.DateOfJoining.ToString("MM/dd/yyyy")</td>
                    <td>@user.PhoneNumber</td>

                    <td>
                        <a href="@Url.Action("CreatePayRoll", "Admin", new { userId = user.Id })" class="btn btn-primary btn-sm" title="Create PayRoll">
                            <i class="fas fa-plus"></i> <!-- Font Awesome icon for "Add" -->
                        </a>
                        <a href="@Url.Action("ViewPayRollDetails", "Admin", new { userId = user.Id })" class="btn btn-info btn-sm" title="View PayRoll Details">
                            <i class="fas fa-eye"></i> <!-- Font Awesome icon for "View" -->
                        </a>
                        <a href="@Url.Action("Delete", "Admin", new { userId = user.Id })"
                           class="btn btn-danger btn-sm"
                           title="Delete User"
                           onclick="return confirm('Are you sure you want to delete this user?')">
                            <i class="fas fa-trash-alt"></i> <!-- Font Awesome icon for "Delete" -->
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
