@model EmailVerification.Models.PayRoll

@{
    ViewData["Title"] = "PayRoll Details for " + (Model.User?.FullName ?? "Unknown User");
}

<div class="container mt-4">
    <h2 class="text-center mb-4">PayRoll Details for @(Model.User?.FullName ?? "Unknown User")</h2>

    @if (Model == null || Model.User == null)
    {
        <div class="alert alert-warning text-center">
            No payroll record found for the specified user.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-info text-center">
                            <!-- Added table-info for background color and text-center for text alignment -->
                            <tr>
                                <th>Detail</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Basic Salary</th>
                                <td>@Model.BasicSalary</td>
                            </tr>
                            <tr>
                                <th>Bonus</th>
                                <td>@Model.Bonus</td>
                            </tr>
                            <tr>
                                <th>Deductions</th>
                                <td>@Model.Deductions</td>
                            </tr>
                            <tr>
                                <th>Total Salary</th>
                                <td>@Model.TotalSalary</td>
                            </tr>
                            <tr>
                                <th>Pay Date</th>
                                <td>@(Model.PayDate.HasValue ? Model.PayDate.Value.ToString("yyyy-MM-dd") : "Not Available")</td>
                            </tr>
                            <tr>
                                <th>Remarks</th>
                                <td>@Model.Remarks</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}
