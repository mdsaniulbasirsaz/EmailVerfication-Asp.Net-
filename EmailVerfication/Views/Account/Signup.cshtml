@model EmailVerfication.Models.User
@{
    ViewData["Title"] = "Signup Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold text-danger">Create an Account</h3>
                    <form asp-action="Signup" method="post">
                        <div class="form-group mb-3">
                            <label for="FullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="FullName" name="FullName" placeholder="Enter your full name" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required />
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Sign Up</button>
                    </form>
                    <hr class="my-4">
                    <p class="text-center mb-0">Already have an account? <a href="/Account/Login" class="text-danger">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
