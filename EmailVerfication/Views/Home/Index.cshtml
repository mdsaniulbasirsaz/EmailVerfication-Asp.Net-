

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <section class="jumbotron jumbotron-fluid text-center bg-primary text-white mb-5">
        <div class="container py-5">
            <h1 class="display-4 font-weight-bold">Welcome to the Payroll Management System</h1>
            <p class="lead my-4">Streamline your payroll process with ease. Manage employee data, salaries, and reports effectively in one place.</p>
            <a href="/Account/Login" class="btn btn-light btn-lg">Get Started</a>


        </div>
    </section>


    <!-- Dashboard Overview -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Dashboard Overview</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header"><i class="fas fa-users"></i> Total Employees</div>
                    <div class="card-body">
                        <h5 class="card-title">100</h5>
                        <p class="card-text">Total number of employees in the system.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header"><i class="fas fa-dollar-sign"></i> Total Payroll</div>
                    <div class="card-body">
                        <h5 class="card-title">$200,000</h5>
                        <p class="card-text">Total payroll for the current month.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header"><i class="fas fa-calendar-alt"></i> Monthly Report</div>
                    <div class="card-body">
                        <h5 class="card-title">January 2024</h5>
                        <p class="card-text">Review the monthly payroll details.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
